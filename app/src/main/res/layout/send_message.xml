<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@drawable/btn_background"
        app:constraint_referenced_ids="txt_username, txt_send_message"
        android:orientation="vertical"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textColor="@color/grey"
        android:textSize="11sp"
        app:layout_constraintRight_toRightOf="@id/flow"
        app:layout_constraintTop_toTopOf="@id/flow"
        tools:text="you" />

    <TextView
        android:id="@+id/txt_send_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textColor="@color/grey"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/flow"
        app:layout_constraintLeft_toLeftOf="@id/flow"
        app:layout_constraintRight_toRightOf="@id/flow"
        app:layout_constraintTop_toBottomOf="@id/txt_username"
        tools:text="this is send message" />

</androidx.constraintlayout.widget.ConstraintLayout>